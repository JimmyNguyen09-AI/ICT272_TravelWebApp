@using System.Linq
@model IEnumerable<ICT272_Project.Models.Feedback>

@{
    ViewData["Title"] = "Feedback";
    var bookingLookup = ViewBag.BookingLookup as IDictionary<int, string> ?? new Dictionary<int, string>();
    var hasFeedback = Model?.Any() ?? false;
}

<div class="container py-4 py-md-5">
    <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3 mb-4">
        <div>
            <h1 class="h3 mb-1">Feedback</h1>
            <p class="text-muted mb-0">Read through the experiences you've shared and keep agencies informed about your journeys.</p>
        </div>
        @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Tourist"))
        {
            <a asp-action="Create" class="btn btn-primary">Share Feedback</a>
        }
    </div>

    @if (TempData["FeedbackSuccess"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["FeedbackSuccess"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!hasFeedback)
    {
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <h2 class="h5 mb-2">No feedback yet</h2>
                <p class="text-muted mb-4">When you share your first review, it will appear here along with the booking it belongs to.</p>
                @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Tourist"))
                {
                    <a asp-action="Create" class="btn btn-outline-primary">Write your first feedback</a>
                }
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                var bookingTitle = bookingLookup.TryGetValue(item.BookingID, out var title)
                ? title
                : $"Booking #{item.BookingID}";
                <div class="col-12 col-lg-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h2 class="h5 mb-1">@bookingTitle</h2>
                                    <span class="badge bg-light text-secondary">Reference: #@item.BookingID</span>
                                </div>
                                <span class="badge bg-warning text-dark">@item.Rating / 5</span>
                            </div>

                            <p class="text-muted small mb-3">Submitted on @item.Date.ToString("dd MMM yyyy")</p>
                            <p class="mb-4">@(!string.IsNullOrWhiteSpace(item.Comment) ? item.Comment : "No additional comments provided.")</p>

                            @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Tourist"))
                            {
                                <div class="mt-auto d-flex gap-2">
                                    <a asp-action="Edit" asp-route-id="@item.FeedbackID" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.FeedbackID" class="btn btn-sm btn-outline-secondary">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.FeedbackID" class="btn btn-sm btn-outline-danger">Delete</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
