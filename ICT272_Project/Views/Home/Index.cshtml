@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="display-4">Welcome to Travel Booking System 🌍</h1>
        <p class="lead">Find and book amazing tours with trusted agencies.</p>
    </div>

    <!-- Featured Tours -->
    <div class="container mt-5">
        <h3 class="text-center mb-4 fw-bold text-uppercase">Featured Tours</h3>
        <div class="row">
            @foreach (var tour in ViewBag.Tours)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100 border-0">
                        <div class="position-relative" style="height:250px; border-radius:.5rem; overflow:hidden;">
                            <img src="@tour.TourImage" alt="@tour.Title" class="w-100 h-100" style="object-fit:cover;" />
                            <div class="position-absolute bottom-0 start-0 w-100 bg-dark bg-opacity-50 text-white p-3">
                                <h5 class="fw-bold">@tour.Title</h5>
                                <p class="mb-1">@tour.Description.Substring(0, Math.Min(60, tour.Description.Length))...</p>
                                <p class="mb-1"><strong>Price:</strong> $@tour.Price</p>
                                <p class="mb-2"><strong>Agency:</strong> @tour.TravelAgency?.AgencyName</p>
                                <a asp-controller="TourPackages" asp-action="Details" asp-route-id="@tour.PackageID" class="btn btn-success btn-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Our Agencies -->
    <div class="container mt-5">
        <h3 class="text-center mb-4 fw-bold text-uppercase">Our Agencies</h3>
        <div class="row">
            @foreach (var agency in ViewBag.Agencies)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100 border-0">
                        <div class="position-relative" style="height:250px; border-radius:.5rem; overflow:hidden;">
                            <img src="@agency.ProfileImage" alt="@agency.AgencyName" class="w-100 h-100" style="object-fit:cover;" />
                            <div class="position-absolute bottom-0 start-0 w-100 bg-dark bg-opacity-50 text-white p-3 text-center">
                                <h5>@agency.AgencyName</h5>
                                <p>@agency.Description</p>
                                <a asp-controller="TravelAgencies" asp-action="Details" asp-route-id="@agency.AgencyID" class="btn btn-light btn-sm">View Agency</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Recent Feedback -->
    <div class="container mt-5">
        <h3 class="text-center mb-4 fw-bold text-uppercase">Recent Feedback</h3>
        <div class="row">
            @foreach (var fb in ViewBag.Feedbacks)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100 p-3">
                        <blockquote class="blockquote mb-0">
                            <p>"@fb.Comment"</p>
                            <footer class="blockquote-footer">@fb.Tourist?.FullName</footer>
                        </blockquote>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

