@model ICT272_Project.Models.Booking


@{
    ViewData["Title"] = "Create";
}

<h2>Create Booking</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TouristID" class="control-label">Tourist</label>
        <select asp-for="TouristID" class="form-control" asp-items="ViewBag.Tourists">
            <option value="">-- Select Tourist --</option>
        </select>
        <span asp-validation-for="TouristID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PackageID" class="control-label">Tour Package</label>
        <select asp-for="PackageID" class="form-control" asp-items="ViewBag.TourPackages">
            <option value="">-- Select Tour Package --</option>
        </select>
        <span asp-validation-for="PackageID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BookingDate" class="control-label">Booking Date</label>
        <input asp-for="BookingDate" class="form-control" type="date" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumberofPaticipants" class="control-label">Group Size</label>
        <input asp-for="NumberofPaticipants" class="form-control" type="number" min="1" />
        <span asp-validation-for="NumberofPaticipants" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Status" value="Pending" />

    <button type="submit" class="btn btn-primary mt-3">Create Booking</button>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
